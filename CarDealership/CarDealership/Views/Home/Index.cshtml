@using CarDealership.Models.ViewModel
@model CarViewModel

@{
    ViewBag.Title = "Car Dealership";
}

@section scriptsHead {
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/home.js"></script>
}

@section styles{
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="cardealership-listing-container">
    <div class="container">
        <h1 class="bmblue page-heading">Car Dealership</h1>
    </div>

    <div class="container my-3">
        <div class="row">
            <div class="col-sm-12">
                <label class="heading left">Show results for:</label>
                <div class="col-sm-12">
                    <div class="col-sm-4">
                        <div class="cb-filter-input">
                            <input id="includeObsolete" type="checkbox" class="cb-filter-selection include-automatic">
                            <label for="includeObsolete">Automatic</label>
                        </div>
                        <div class="cb-filter-input">
                            <input id="includeExpired" type="checkbox" class="cb-filter-selection include-sunroof">
                            <label for="includeExpired">Sun roof</label>
                        </div>
                        <div class="cb-filter-input">
                            <input id="includeExpired" type="checkbox" class="cb-filter-selection include-heatedseats">
                            <label for="includeExpired">Heated Seats</label>
                        </div>
                        <div class="cb-filter-input">
                            <input id="includeExpired" type="checkbox" class="cb-filter-selection include-navigation">
                            <label for="includeExpired">Navigation</label>
                        </div>

                    </div>
                    <div class="col-sm-4">
                        <div class="cb-filter-input">
                            <input id="includeExpired" type="checkbox" class="cb-filter-selection include-fourwheeldrive">
                            <label for="includeExpired">4 Wheel Drive</label>
                        </div>
                        <div class="cb-filter-input">
                            <input id="includeExpired" type="checkbox" class="cb-filter-selection include-lowmiles">
                            <label for="includeExpired">Low Miles</label>
                        </div>
                        <div class="cb-filter-input">
                            <input id="includeExpired" type="checkbox" class="cb-filter-selection include-powerwindows">
                            <label for="includeExpired">Power Windows</label>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="cb-filter-input">
                            <label>Color:</label>
                            <span>
                                <input id="includeActive" type="checkbox" checked="checked" class="cb-filter-selection include-active">
                                <label for="includeActive">Red</label>
                            </span>
                            <span>
                                <input id="includeActive" type="checkbox" checked="checked" class="cb-filter-selection include-active">
                                <label for="includeActive">White</label>
                            </span>
                            <span>
                                <input id="includeActive" type="checkbox" checked="checked" class="cb-filter-selection include-active">
                                <label for="includeActive">Gray</label>
                            </span>
                            <span>
                                <input id="includeActive" type="checkbox" checked="checked" class="cb-filter-selection include-active">
                                <label for="includeActive">Silver</label>
                            </span>
                            <span>
                                <input id="includeActive" type="checkbox" checked="checked" class="cb-filter-selection include-active">
                                <label for="includeActive">Black</label>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container container-tabs position-relative">
        <div class="tab-content clearfix">
            <div class="tab-pane active" role="tabpanel">
                <table id="car-table" class="table table-bordered table-striped car-table">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Make</th>
                            <th scope="col">Year</th>
                            <th scope="col">Price</th>
                            <th scope="col">Color</th>
                            <th scope="col">IsAutomatic</th>
                            <th scope="col">HasSunRoof</th>
                            <th scope="col">IsFourWheelDrive</th>
                            <th scope="col">HasLowMiles</th>
                            <th scope="col">HasPowerWindows</th>
                            <th scope="col">HasNavigation</th>
                            <th scope="col">HasHeatedSeats</th>
                        </tr>
                    </thead>
                    @foreach (var carinfo in Model.data)
                    {
                        <tr>
                            <td>@carinfo.Make</td>
                            <td>@carinfo.Year</td>
                            <td>@carinfo.Price</td>
                            <td>@carinfo.Color</td>
                            <td>@carinfo.IsAutomatic</td>
                            <td>@carinfo.HasSunRoof</td>
                            <td>@carinfo.IsFourWheelDrive</td>
                            <td>@carinfo.HasLowMiles</td>
                            <td>@carinfo.HasPowerWindows</td>
                            <td>@carinfo.HasNavigation</td>
                            <td>@carinfo.HasHeatedSeats</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

